{
  "agent_type": "AlpacaAgent",
  "market": "crypto",
  "trading_mode": "paper",
  "description": "Multi-model crypto trading - GPT-5.2, Claude Opus 4.5, Gemini 3 Pro/Flash, Grok 4",

  "models": [
    {
      "name": "chatgpt-5.2",
      "basemodel": "gpt-5.2",
      "signature": "gpt-5.2-crypto",
      "enabled": true,
      "openai_api_key_env": "OPENAI_API_KEY"
    },
    {
      "name": "claude-opus-4.5",
      "basemodel": "claude-opus-4-5-20251101",
      "signature": "claude-opus-4.5-crypto",
      "enabled": true,
      "openai_api_key_env": "CLAUDE_API_KEY"
    },
    {
      "name": "gemini-3-pro",
      "basemodel": "gemini-3-pro-preview",
      "signature": "gemini-3-pro-crypto",
      "enabled": true,
      "openai_api_key_env": "GEMINI_API_KEY"
    },
    {
      "name": "gemini-3-flash",
      "basemodel": "gemini-3-flash-preview",
      "signature": "gemini-3-flash-crypto",
      "enabled": true,
      "openai_api_key_env": "GEMINI_API_KEY"
    },
    {
      "name": "grok-4",
      "basemodel": "grok-4-1-fast-reasoning",
      "signature": "grok-4-crypto",
      "enabled": true,
      "openai_api_key_env": "GROK_API_KEY",
      "openai_base_url": "https://api.x.ai/v1"
    }
  ],

  "agent_config": {
    "max_steps": 15,
    "max_retries": 3,
    "base_delay": 1.0,
    "check_market_hours": false,
    "verbose": false
  },

  "risk_config": {
    "max_position_pct": 0.25,
    "max_order_value": 5000,
    "daily_loss_limit": 500
  },

  "crypto_symbols": [
    "BTC/USD", "ETH/USD", "SOL/USD", "AVAX/USD", "DOGE/USD",
    "LINK/USD", "UNI/USD", "AAVE/USD", "LTC/USD", "BCH/USD"
  ],

  "log_config": {
    "log_path": "./data/agent_data_crypto",
    "save_trades": true
  }
}
